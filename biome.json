{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"plugins": [
		"./node_modules/biome-plugin-no-type-assertion/no-type-assertion.grit"
	],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "error" },
			"style": { "noNonNullAssertion": "error", "useConst": "error" },
			"complexity": { "useLiteralKeys": "off" }
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"src/**/*.js",
			"src/**/*.jsx",
			"*.json"
		]
	}
}
